<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.cse499.homecontrol.Activities.Authentication.RegisterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerLayoutZero">

        <TextView
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textAlignment="textStart"
            android:padding="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etName"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerLayoutZero"
        android:id="@+id/registerLayoutOne"
        android:layout_marginBottom="10dp">

        <TextView
            android:text="Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:padding="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etUsername"
            android:textSize="18sp"
            android:padding="5dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerLayoutTwo"
        android:layout_below="@+id/registerLayoutOne"
        android:layout_marginBottom="10dp">

        <TextView
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textAlignment="textStart"
            android:padding="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etMail"
            android:padding="5dp"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerLayoutThree"
        android:layout_below="@+id/registerLayoutTwo"
        android:layout_marginBottom="10dp">

        <TextView
            android:text="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:padding="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etPassword"
            android:padding="5dp"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerLayoutFour"
        android:layout_below="@+id/registerLayoutThree"
        android:layout_marginBottom="10dp">

        <TextView
            android:text="Group ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textAlignment="textStart"
            android:padding="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etGroupId"
            android:textSize="18sp"
            android:padding="5dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerLayoutFive"
        android:layout_below="@+id/registerLayoutFour"
        android:layout_marginBottom="10dp">

        <TextView
            android:text="Authentication Code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textAlignment="textStart"
            android:padding="5dp"
            android:labelFor="@+id/etAuthCode"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etAuthCode"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textAlignment="textStart"
            android:padding="5dp" />
    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/registerLayoutSix"
        android:layout_below="@+id/registerLayoutFive">

        <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegisterUser"
            android:layout_marginStart="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:elevation="10dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light" />

        <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelRegister"
            android:layout_marginEnd="30dp"
            android:layout_alignTop="@+id/btnRegisterUser"
            android:layout_alignParentEnd="true"
            android:elevation="10dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light" />
    </RelativeLayout>
</RelativeLayout>
