<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_device_log"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.cse499.homecontrol.Activities.Devices.DeviceLog">
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="9dp"
        android:minHeight="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/dname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:text="Device Name"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:width="110dp" />

        <TextView
            android:id="@+id/uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:text="User"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:width="110dp" />

        <TextView
            android:id="@+id/action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:text="Action"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:width="100dp" />

        <TextView
            android:id="@+id/Timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:text="Timestamp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:width="280dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/divider_horizontal_dim_dark"
        android:elevation="2dp"
        android:layout_height="300dp"
        android:layout_below="@+id/headerLayout"
        android:layout_marginTop="-18dp">

        <TableLayout
            android:id="@+id/displayLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/updButton"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:text="device name"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:width="110dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:text="User"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:width="110dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:text="Action"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:width="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:text="Timestamp"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:width="280dp" />
            </TableRow>

            <TableRow
                android:id="@+id/display_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableLayout>
    </ScrollView>
</RelativeLayout>
